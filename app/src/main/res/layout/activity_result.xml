<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    tools:context=".Activity.ResultActivity">

    <TextView
        android:id="@+id/txtHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="#35166C"
        android:gravity="center"
        android:minHeight="@dimen/_30sdp"
        android:text="XYZ SOCIETY"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/txtHeading4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="#35166C"
        android:gravity="center"
        android:minHeight="@dimen/_30sdp"
        android:text="Details of the Profile"
        android:textColor="#FFFFFF" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="@dimen/_1sdp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/txtFirstNameResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"
                android:hint="Result First Name"
                android:minHeight="@dimen/_30sdp" />

            <TextView
                android:id="@+id/txtLastNameResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"
                android:hint="Result Last Name"
                android:minHeight="@dimen/_30sdp" />

            <TextView
                android:id="@+id/txtSpinnerUnitResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"
                android:hint="Result Spinner Unit"
                android:minHeight="@dimen/_30sdp" />

            <!--            <TextView-->
            <!--                android:id="@+id/txtRecyclerViewUnitResult"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:layout_marginBottom="@dimen/_10sdp"-->
            <!--                android:gravity="center"-->
            <!--                android:hint="Result RecyclerView Unit"-->
            <!--                android:minHeight="@dimen/_30sdp" />-->

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"
                android:hint="Date"
                android:minHeight="@dimen/_30sdp" />

            <TextView
                android:id="@+id/txtDateOfBirthPicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"
                android:hint="Date Of Birth"
                android:minHeight="@dimen/_30sdp" />

            <TextView
                android:id="@+id/txtEventDatePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"
                android:hint="Event Date"
                android:minHeight="@dimen/_30sdp" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"
                android:hint="Time"
                android:minHeight="@dimen/_30sdp" />

            <TextView
                android:id="@+id/txtGenderResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"
                android:hint="Result Gender"
                android:minHeight="@dimen/_30sdp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>